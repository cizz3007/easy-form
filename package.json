    "build:cjs": "BABEL_ENV=cjs babel src --extensions .ts,.tsx -d dist/cjs --source-maps",
    "build:types": "tsc --declaration --declarationDir dist/types",
    "postbuild": "echo I run after the build script"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "prettier --write",
      "eslint src --cache --fix",
      "git add"
    ]
  },
